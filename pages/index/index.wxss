header.page-header {
    display: block;
    text-align: center;
    margin-bottom: 50rpx;
    color: #9c9c9c;
    margin-top: 30rpx;
}
h1.cat-title {
    display: inline-block;
    font-size: 25px;
    font-weight: 400;
    padding-right: 15px;
    border-right: 1rpx dashed #ddd;
    color: #676767;
}
.cat-des p {
    display: inline-block;
    padding-left: 10px;
}
.pgc-follow-list {
  
}
.pgc-space-follow-item {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  margin: 15rpx 20rpx;
}
.pgc-space-follow-item a.pgc-item-cover {
    flex: none;
    width: 120px;
    height: 140px;
    overflow: hidden;
    text-decoration: none;
    border-radius: 4px;
    box-shadow: 0 0 2px 0 rgba(0,0,0,.1);
}
.pgc-space-follow-item a.pgc-item-cover image {
    width: 100%;
    height: 100%;
}
.pgc-item-info {
    padding-left: 10px;
    height: 140px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.pgc-space-follow-item .pgc-item-info .pgc-item-title {
  font-size: 18px;
}
.pgc-space-follow-item .pgc-item-info .pgc-item-desc {
  display: -webkit-box;
  font-weight: 400;
  color: #222;
  line-height: 20px;
  max-height: 40px;
  font-size: 12px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin: 0 0 8px;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
}
.type-and-area,.pgc-item-state {
  display: block;
  height: 14px;
  font-size: 12px;
  color: #999;
  line-height: 14px;
  margin-bottom: 6px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.pgc-space-follow-item .pgc-item-info span {
  margin-right: 6px;
}
.pgc-space-follow-item .pgc-item-info i {
  display: inline-block;
  vertical-align: top;
  margin-top: 1px;
  width: 1px;
  height: 12px;
  margin-right: 6px;
  background-color: #b7c0cc;
}
.loadmore {
  color: #888;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
}

.loadmore.loading::before {
  content: '';
  width: 40rpx;
  height: 40rpx;
  margin-top: -10rpx;
  margin-right: 10rpx;
  display: inline-block;
  vertical-align: middle;
  animation: loading 1s steps(12) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%
}

@keyframes loading {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(-360deg)
  }
}
